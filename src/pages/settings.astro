---
import BaseLayout from "@/layouts/BaseLayout.astro";
---

<BaseLayout title="Narratype | Settings">
    <main class="mx-auto min-h-screen max-w-6xl px-4 py-6">
        <div class="mb-6 flex items-end justify-between">
            <div>
                <h1 class="text-2xl font-semibold">Settings</h1>
                <p class="text-neutral-400">Local preferences and data management.</p>
            </div>
            <a href="/" class="btn-secondary">Back to Practice</a>
        </div>

        <div class="card p-4">
            <div id="settings-root"></div>
            <script type="module">
                import React from "react";
                import { createRoot } from "react-dom/client";
                import { SettingsPanel } from "@/react/SettingsPanel";
                const container = document.getElementById("settings-root");
                if (container)
                    createRoot(container).render(React.createElement(SettingsPanel));
            </script>
        </div>
    </main>
</BaseLayout>
